{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "bin",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "templates"
  ]
}
