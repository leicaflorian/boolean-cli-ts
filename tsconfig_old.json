{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": false,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
